<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!--
            Name
    -->
    <display-name>kVASySystemControl</display-name>
    <!--
            Welcome File
    -->
    <welcome-file-list>
        <welcome-file>index</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--
            Session & Login
    -->
    <session-config>
        <session-timeout>
            600
        </session-timeout>
    </session-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure Area</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>GETLIB</http-method>
            <http-method>COPY</http-method>
            <http-method>MOVE</http-method>
            <http-method>DELETE</http-method>
            <http-method>PROPFIND</http-method>
            <http-method>GET</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>MKCOL</http-method>
            <http-method>PROPPATCH</http-method>
            <http-method>LOCK</http-method>
            <http-method>UNLOCK</http-method>
            <http-method>VERSION-CONTROL</http-method>
            <http-method>CHECKIN</http-method>
            <http-method>CHECKOUT</http-method>
            <http-method>UNCHECKOUT</http-method>
            <http-method>REPORT</http-method>
            <http-method>UPDATE</http-method>
            <http-method>CANCELUPLOAD</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Protected</role-name>
        </auth-constraint>
    </security-constraint>
    <!--
            Exclude JS Scripts and Css
    -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Exclude from Security</web-resource-name>
            <url-pattern>/script/*</url-pattern>
            <url-pattern>/layout/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-role>
        <role-name>Protected</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>LDAP</realm-name>
        <form-login-config>
            <form-login-page>/login</form-login-page>
            <form-error-page>/loginError</form-error-page>
        </form-login-config>
    </login-config>
    <!--
            Servlets & Mapping 
    -->
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>de.siv.systemcontrol.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>de.siv.systemcontrol.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginError</servlet-name>
        <servlet-class>de.siv.systemcontrol.LoginError</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginError</servlet-name>
        <url-pattern>/loginError</url-pattern>
    </servlet-mapping>
        <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>de.siv.systemcontrol.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserManagement</servlet-name>
        <servlet-class>de.siv.systemcontrol.UserManagement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserManagement</servlet-name>
        <url-pattern>/UserManagement</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserBasicsScript</servlet-name>
        <servlet-class>de.siv.script.UserBasics</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserBasicsScript</servlet-name>
        <url-pattern>/script/kVASySystemControl/UserBasics.js</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserBasicsStyle</servlet-name>
        <servlet-class>de.siv.style.UserBasics</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserBasicsStyle</servlet-name>
        <url-pattern>/layout/kVASySystemControl/UserBasics.css</url-pattern>
    </servlet-mapping>
</web-app>
